# ==============================================================================
# OPERIS CLOUD SERVER CONFIGURATION
# ==============================================================================
# Copy to .env and fill with your values

# ------------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# ------------------------------------------------------------------------------
DB_HOST=192.168.1.5
DB_PORT=5432
DB_NAME=operisagent
DB_USER=duc
DB_PASSWORD=080103
# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_SSL=false

# ------------------------------------------------------------------------------
# REDIS (Optional - for session caching and pub/sub)
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ------------------------------------------------------------------------------
# RELAY GATEWAY (WebSocket server for mini-PC connections)
# ------------------------------------------------------------------------------
RELAY_GATEWAY_PORT=8443
RELAY_GATEWAY_HOST=0.0.0.0

# TLS configuration (required for production)
RELAY_GATEWAY_TLS_ENABLED=false
RELAY_GATEWAY_TLS_CERT=/path/to/cert.pem
RELAY_GATEWAY_TLS_KEY=/path/to/key.pem

# Connection limits
RELAY_GATEWAY_MAX_CONNECTIONS_PER_CUSTOMER=100
RELAY_GATEWAY_HEARTBEAT_INTERVAL_MS=30000
RELAY_GATEWAY_AUTH_TIMEOUT_MS=10000
RELAY_GATEWAY_COMMAND_TIMEOUT_MS=120000

# ------------------------------------------------------------------------------
# API SERVER (REST API)
# ------------------------------------------------------------------------------
API_PORT=8015
API_HOST=127.0.0.1

# ------------------------------------------------------------------------------
# CUSTOMER PORTAL (UI cho khách hàng)
# ------------------------------------------------------------------------------
CUSTOMER_PORTAL_PORT=3023
CUSTOMER_PORTAL_HOST=127.0.0.1

# ------------------------------------------------------------------------------
# ADMIN DASHBOARD (UI quản trị hệ thống)
# ------------------------------------------------------------------------------
ADMIN_DASHBOARD_PORT=3024
ADMIN_DASHBOARD_HOST=127.0.0.1

# ------------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# ------------------------------------------------------------------------------
# JWT secret for authentication tokens (CHANGE IN PRODUCTION!)
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# Bcrypt rounds for password hashing (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Session expiry in seconds (default: 24 hours)
SESSION_EXPIRY_SECONDS=86400

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# ------------------------------------------------------------------------------
# TWILIO (WhatsApp integration)
# ------------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# ------------------------------------------------------------------------------
# AI PROVIDERS
# ------------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-xxxxx

# ------------------------------------------------------------------------------
# OPERIS MODE
# ------------------------------------------------------------------------------
# cloud  = Full cloud server with relay gateway, database, APIs
# local  = Local-only mode (backward compatible with original Moltbot)
OPERIS_MODE=local

# ------------------------------------------------------------------------------
# FEATURE FLAGS
# ------------------------------------------------------------------------------
ENABLE_RELAY_GATEWAY=false
ENABLE_CUSTOMER_PORTAL=false
ENABLE_BILLING=false
